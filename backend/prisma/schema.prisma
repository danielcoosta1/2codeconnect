generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Publicacao {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  descricao   String
  imagem      String
  tags        String[]
  userId      String   @db.ObjectId
  autor       User     @relation(fields: [userId], references: [id])
}


model User {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  email     String        @unique
  senha     String
  publicacoes Publicacao[]
}